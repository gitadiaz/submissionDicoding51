<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:background="@color/blue"
    >

    <LinearLayout
        android:id="@+id/bg_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:background="@drawable/rounded_top_white"
        android:orientation="vertical">

    </LinearLayout>

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/foto_gita"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/name_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gita Diaz Pangesti"
        android:layout_below="@id/img_profile"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="#2d2d2d"
        />

    <TextView
        android:id="@+id/email_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gitadiazp@gmail.com"
        android:layout_below="@id/name_profile"
        android:layout_centerInParent="true"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="inggitsemut"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:textColor="#A8A8A8"/>

</RelativeLayout>